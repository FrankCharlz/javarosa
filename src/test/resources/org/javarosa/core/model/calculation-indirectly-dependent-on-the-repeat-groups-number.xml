<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml">
    <h:head>
        <h:title>Calculation indirectly dependent on the repeat groups number</h:title>
        <model>
            <instance>
                <data id="data">
                    <house>
                        <name>A</name>
                    </house>
                    <house>
                        <name>B</name>
                    </house>
                    <house>
                        <name>C</name>
                    </house>
                    <house>
                        <name>D</name>
                    </house>
                    <house>
                        <name>E</name>
                    </house>
                    <summary/>
                </data>
            </instance>
            <bind nodeset="/data/house/name" type="string"/>
            <bind calculate="concat(/data/house/name)" nodeset="/data/summary" type="string"/>
        </model>
    </h:head>
    <h:body>
        <group ref="/data/house">
            <label>Houses</label>
            <repeat nodeset="/data/house">
                <input ref="/data/house/name">
                    <label>Name</label>
                </input>
            </repeat>
        </group>
    </h:body>
</h:html>
