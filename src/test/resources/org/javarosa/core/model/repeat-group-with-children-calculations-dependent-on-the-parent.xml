<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml">
    <h:head>
        <h:title>Repeat group with children calculation dependent on the parent</h:title>
        <model>
            <instance>
                <data id="data">
                    <house>
                        <number/>
                        <name>A</name>
                        <name_and_number/>
                    </house>
                    <house>
                        <number/>
                        <name>B</name>
                        <name_and_number/>
                    </house>
                    <house>
                        <number/>
                        <name>C</name>
                        <name_and_number/>
                    </house>
                    <house>
                        <number/>
                        <name>D</name>
                        <name_and_number/>
                    </house>
                    <house>
                        <number/>
                        <name>E</name>
                        <name_and_number/>
                    </house>
                </data>
            </instance>
            <bind calculate="position(..)" nodeset="/data/house/number" type="int"/>
            <bind nodeset="/data/house/name" type="string"/>
            <bind calculate="concat(/data/house/name, /data/house/number)" nodeset="/data/house/name_and_number" type="string"/>
        </model>
    </h:head>
    <h:body>
        <group ref="/data/house">
            <label>Houses</label>
            <repeat nodeset="/data/house">
                <input ref="/data/house/number">
                    <label>Number</label>
                </input>
                <input ref="/data/house/name">
                    <label>Name</label>
                </input>
                <input ref="/data/house/name_and_number">
                    <label>Name and number</label>
                </input>
            </repeat>
        </group>
    </h:body>
</h:html>
