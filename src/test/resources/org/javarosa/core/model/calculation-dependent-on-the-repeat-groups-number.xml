                    <house>
                        <number/>
                    </house>
                    <house>
                        <number/>
                    </house>
                    <house>
                        <number/>
                    </house>
                    <summary/>
                </data>
            </instance>
            <bind calculate="position(..)" nodeset="/data/house/number" type="int"/>
            <bind calculate="sum(/data/house/number)" nodeset="/data/summary" type="int"/>
        </model>
    </h:head>
    <h:body>
        <group ref="/data/house">
            <label>Houses</label>
            <repeat nodeset="/data/house">
                <input ref="/data/house/number">
                    <label>Number</label>
                </input>
            </repeat>
        </group>
    </h:body>
</h:html>
